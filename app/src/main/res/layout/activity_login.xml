<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">
    <ImageView
            android:layout_width="254dp"
            android:layout_height="247dp" app:srcCompat="@drawable/sign_in_pana"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.346" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Sign In"
            android:layout_width="132dp"
            android:layout_height="43dp" android:id="@+id/textView"

            android:fontFamily="@font/poppins_bold" android:textSize="24sp"
            android:textColor="#3C3939" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.172"
            android:layout_marginTop="40dp"/>
    <TextView
            android:text="Login to your account "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:fontFamily="@font/poppins"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.199"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="4dp"/>
    <EditText
            android:layout_width="309dp"
            android:layout_height="64dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:drawablePadding="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:drawableStart="@drawable/person"
            android:id="@+id/username"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.47" android:fontFamily="@font/poppins" android:hint="Username"
    />
    <EditText
            android:layout_width="309dp"
            android:layout_height="64dp"
            android:inputType="textPassword"
            android:ems="10"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:drawableStart="@drawable/lock"
            android:id="@+id/password"
            android:drawablePadding="10dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48" android:fontFamily="@font/poppins" android:hint="Password"
            app:layout_constraintTop_toBottomOf="@+id/username" android:layout_marginTop="20dp"
            android:textSize="14sp"
    />
    <Button
            android:text="Sign In"
            android:layout_width="313dp"
            android:layout_height="59dp" android:id="@+id/signinbtn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52" app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_semibold"
            app:backgroundTint="#66BB6A"/>
    <TextView
            android:text="New User?Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/poppins"
            app:layout_constraintHorizontal_bias="0.197" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signinbtn" app:layout_constraintVertical_bias="0.147"/>
</androidx.constraintlayout.widget.ConstraintLayout>