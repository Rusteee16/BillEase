<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"

                android:paddingRight="5dp"
                android:paddingTop="5dp"
                tools:context=".MainActivity"
                android:background="#f3f3f2">


    <ScrollView android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_margin="10dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="GST" android:fontFamily="@font/poppins_bold"
                          android:layout_marginLeft="10dp"
                          android:textSize="24sp" android:textColor="@color/teal_200"></TextView>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:text="CALCULATOR" android:fontFamily="@font/poppins_bold"
                          android:layout_marginRight="20dp"

                          android:textSize="24sp" android:textColor="@color/purple_500"></TextView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="10dp"

                    app:cardBackgroundColor="@color/white"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
            >
                <ImageView
                        android:layout_width="187dp"
                        android:layout_height="169dp"
                        android:layout_gravity="top|right"
                        android:src="@drawable/img_1"

                    android:contentDescription="@string/app_name"/>
                <TextView
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:text="How Much You "
                        android:textColor="@color/black"
                        android:layout_gravity="top|left"
                        android:layout_marginTop="50dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/poppins_bold"/>
                <TextView
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:text="Know About"
                        android:layout_marginLeft="11dp"
                        android:layout_gravity="top|left"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="18dp"
                        android:textSize="10sp"

                        android:fontFamily="@font/poppins_semibold"/>
                <TextView
                        android:layout_width="309dp"
                        android:layout_height="wrap_content"
                        android:text="GST? "
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="top|left"
                        android:layout_marginTop="90dp"
                        android:layout_marginBottom="20dp"
                        android:textSize="30sp"
                        android:textColor="@color/teal_700"
                        android:fontFamily="@font/poppins_bold"/>
                <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:background="@color/teal_200"
                        android:layout_marginTop="180dp" app:backgroundTint="@color/teal_200"
                        android:text="Click here to know more" android:fontFamily="@font/poppins_semibold"
                        android:id="@+id/knowmore">

                </Button>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_margin="15dp">
                <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:background="@color/teal_200"
                        android:drawableLeft="@drawable/tax_bro"
                        android:layout_marginTop="30dp" app:backgroundTint="@color/teal_200"
                        android:text="GST Calculator" android:fontFamily="@font/poppins_semibold"
                        android:id="@+id/gstcalc">

                </Button>

                <Button
                    android:id="@+id/nbill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/purple_700"
                    android:drawableLeft="@drawable/tax_amico"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="New bill"
                    app:backgroundTint="@color/purple_500">

                </Button>

                <Button
                    android:id="@+id/recbill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@color/teal_200"
                    android:drawableLeft="@drawable/reading_list_bro"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Recent bills"
                    app:backgroundTint="@color/teal_200"></Button>
                <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/signout"
                        android:background="@color/red"
                        android:drawableLeft="@drawable/ic_baseline_logout_24"
                        android:layout_marginVertical="20dp"
                        android:text="Sign Out"
                        android:textAlignment="center"
                        app:backgroundTint="@color/red" android:fontFamily="@font/poppins_semibold"></Button>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>