<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="20dp">

    <LinearLayout
        android:background="@drawable/bill_item_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:elevation="30dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/bill_customer_name"
                    tools:text="Customer Name"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:fontFamily="@font/poppins_semibold"/>
            <TextView
                    android:id="@+id/bill_phone_number"
                    tools:text="1234567890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:fontFamily="@font/poppins"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/bill_total_amount"
                    tools:text="2000"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_width="138dp"
                    android:layout_height="32dp"
                    android:layout_weight="3" android:fontFamily="@font/poppins_semibold"/>
            <TextView
                    android:id="@+id/bill_date"
                    tools:text="24-07-2017"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_weight="2" android:fontFamily="@font/poppins"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/bill_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp" />

</LinearLayout>